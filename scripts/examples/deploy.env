# shellcheck shell=bash
# Shared configuration for deploy.sh. Adjust values to match the target environment(s).

APP_NAME="clocktopus"
DOCKERFILE_PATH="docker/Dockerfile"
CACHE_ROOT=".docker-cache"
BUILD_CACHE_LIMIT="6GB"
MAX_IMAGE_AGE="168h"  # prune dangling images older than 7 days by default

# Default fallbacks when a branch is not explicitly listed below.
DEFAULT_BRANCH_IMAGE_TAG="development"
DEFAULT_BRANCH_HOST_PORT="4100"

# Branch-specific overrides for image tag and host port.
# Keys use sanitized branch names where non-alphanumeric characters become underscores.
BRANCH_IMAGE_TAG_main="main"
BRANCH_IMAGE_TAG_development="development"
BRANCH_IMAGE_TAG_next="next"

BRANCH_HOST_PORT_main="4000"
BRANCH_HOST_PORT_development="4100"
BRANCH_HOST_PORT_next="4200"
